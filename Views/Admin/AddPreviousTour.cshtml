@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Discovery_Corner.Models
<!DOCTYPE html>

<html>
<head>
    @Styles.Render("~/Content/css/bootstrap.css")
    @Styles.Render("~/Content/css/bootstrap.js")
    @Styles.Render("~/Content/CSS/footer%20Styler/footerStyle.css")
    <link href="~/Content/hover-min.css" rel="stylesheet" />
    <link href="~/Content/hover.css" rel="stylesheet" />
    
   

    <!-- Form helper   -->
    <script src="~/Content/CSS/js/bootstrap-formhelpers.min.js"></script>
    <script src="~/Content/CSS/js/bootstrap.min.js"></script>
    <script src="~/Content/CSS/js/jquery-1.10.2.min.js"></script>
    <link href="~/Content/CSS/form%20helper%20css/boot.css" rel="stylesheet" />
    <link href="~/Content/CSS/form%20helper%20css/bootstrap-formhelpers.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/form%20helper%20css/bootstrap.min.css" rel="stylesheet" />
    <!--end form helper-->
    <meta name="viewport" content="width=device-width" />
    <title>AddNewTour</title>

    <style>
        body {
           background-repeat: no-repeat;
           background-attachment:fixed;
            background-image: url(../images/adminBackgroundImg.png);
            background-attachment: fixed;
            background-size: contain;
        }
    </style>





  

</head>
<body>

    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-7" style="background-color:white; margin-top:4%;width:70%;opacity:0.9;margin-bottom:6%">
            <nav class="navbar navbar-inverse" style="margin-top:2%">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <div class=""></div>
                        <div style="float:left">
                            <a class="navbar-brand" style="color:deepskyblue; font-size:32px" href="~/Admin/Index">Discovery Corner<small style="font-size:11px">(Admin panal)</small></a>
                        </div>
                    </div>
                    <div style="float:none">
                        <ul class="nav navbar-nav" style="color:deepskyblue;">
                            <li><a href="~/Admin/Index">Home</a></li>
                            <li><a href="~/Admin/NewTour">New Tour</a></li>
                            <li><a href="~/Admin/AddPreviousTour">Previous Tour</a></li>
                            <li><a href="~/Admin/Users">Users</a></li>

                        </ul>
                    </div>
                </div>
            </nav>


            <!--Time ,Date picker-->
            <!--
            <div style="width:16%" class="bfh-timepicker">
            </div>
            <div style="width:16%" class="bfh-datepicker">
            </div>
            -->

            <button name="Add New Tour" class=" form-control" style="vertical-align:bottom;width:40%;margin-top:6% ; margin-left:30%;background-color:antiquewhite;"><a href="~/Admin/PreviousTours" style="font-family:'Goudy Old Style' ; width:20%">Manage Previous Tour </a> </button>



            <h1 style="margin-left:35%">Post Previous Tour</h1>
            <form class="form-horizontal" action="~/Admin/AddPreviousTour" enctype="multipart/form-data" role="form" method="post">
                <div class="form-group">
                    <label class="control-label col-md-4">place</label>
                    <div class="col-md-3">
                        <input type="text" class="form-control" required="" placeholder="place" name="place" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-4">number of days</label>
                    <div class="col-md-3">
                        <input type="text" class="form-control bfh-number " data-min="1" data-max="25" name="noOfDays">
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-md-4">date</label>

                    <div id="jah">
                        <input type="date" class="bfh-datepicker col-md-2 form-control" style="width:40%" name="date">
                    </div>

                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">budget</label>
                    <div class="col-md-3">
                        <input type="text" class="form-control" required="" placeholder="budget" style="width:200%" name="budget" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-4">Image name</label>
                    <div class="col-md-3">
                        <input type="text" class="form-control" required="" placeholder="image name" style="width:40%" name="imageName" />
                    </div>
                </div>




                <div class="form-group">
                    <label class="control-label col-md-4"></label>
                    <div class="col-md-3">
                        <input type="file" required name="pic" multiple class="form-control" style="background-color:lightblue" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-4"></label>
                    <div class="col-md-3">
                        <input type="submit" class="form-control" style="box-shadow:#83d4ef ; background-color:lightblue;text-decoration-color:black;font-family:'Buxton Sketch';font-size:20px;" value="Post">
                    </div>
                </div>

            </form>

        </div>
    </div>



</body>
</html>

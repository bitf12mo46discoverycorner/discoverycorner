@{
    Layout = null;
}
@using Discovery_Corner.Models

<!DOCTYPE html>

<html>
<head>


    @Styles.Render("~/Content/css/bootstrap.css")
    @Styles.Render("~/Content/css/bootstrap.js")

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

    <script src="~/Scripts/jquery-ui-1.8.24.js"></script>
    <script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>

    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <link rel="stylesheet" href="/resources/demos/style.css">


    <!-- font awesome-->
    <link href="~/font-awesome-4.3.0/css/font-awesome.css" rel="stylesheet" />
    <link href="~/font-awesome-4.3.0/css/font-awesome.min.css" rel="stylesheet" />


    <style>
        body {
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-image: url(../../images/adminBackgroundImg.png);
            background-attachment: fixed;
            background-size: contain;
        }
    </style>

    <meta name="viewport" content="width=device-width" />
    <title>Users</title>
</head>
<body>

    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-7" style="background-color:white; margin-top:4%;width:70%;opacity:0.8;margin-bottom:6%">
            <nav class="navbar navbar-inverse" style="margin-top:2%">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <div class=""></div>
                        <div style="float:left">
                            <a class="navbar-brand" style="color:deepskyblue; font-size:32px" href="~/Admin/Index">Discovery Corner<small style="font-size:11px">(Admin panal)</small></a>
                        </div>
                    </div>
                    <div style="float:none">
                        <ul class="nav navbar-nav" style="color:deepskyblue;">
                            <li><a href="~/Admin/Index">Home</a></li>
                            <li><a href="~/Admin/NewTour">New Tour</a></li>
                            <li><a href="~/Admin/AddPreviousTours">Previous Tour</a></li>
                            <li><a href="~/Admin/Users">Users</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
       
            <a title="hit counter"><img src="http://counter8.bestfreecounterstat.com/private/freecounterstat.php?c=3eb50f63639219b61a6abedc25f41457" border="0" title="hit counter" alt="hit counter"></a>

        <div class="row" style="margin-top:6%">
            <div class="col-lg-2"></div>
            <div class="col-lg-9" style="margin-bottom:7%">

                <table border="1" style="border:double;width:80%" class="table table-striped">
                    <tbody>
                        <tr>
                            <td><label>ID</label></td>
                            <td><label>Name</label></td>
                            <td><label>Password</label></td>
                            <td><label>Phone No.</label></td>
                            <td><label>Email</label></td>                            
                            <td><label>Address</label></td>
                            <td><label>      </label></td>
                            <td><label>Remove User</label></td>
                        </tr>
                        @foreach (User i in Model)
                        {
                            <tr>
                                <td>@i.userId</td>
                                <td>@i.name</td>
                                <td>@i.password</td>
                                <td>@i.phone</td>
                                <td>@i.email</td>                                                             
                                <td>@i.address</td>
                                <td>    </td>   
                                <td><button style="background-color:transparent;border-color:transparent"><i style=" color:red;background-color:transparent" class="fa-3x fa fa-lg fa-trash"></i>@Html.ActionLink("Delete", "DeleteUser", new { id = i.userId }) </button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        </div>
    </div>
</body>
</html>
